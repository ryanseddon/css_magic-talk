.circle
  border-radius: 50%
.famous-container
  z-index: 5
  visibility: hidden

.face ~ .famous-container
  visibility: visible

.har {
  &:after {
    background: url(../images/har.png) 100% 0 no-repeat;
    background-size: cover
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    content: ''
    opacity: 0.3
  }
}

